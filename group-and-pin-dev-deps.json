{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchDepTypes": ["dev", "dev-dependencies"],
      "rangeStrategy": "pin"
    },
    {
      "matchDepTypes": ["dev", "dev-dependencies"],
